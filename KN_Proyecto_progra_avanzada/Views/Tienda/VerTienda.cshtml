@model List<KN_Proyecto_progra_avanzada.Models.Catalogo>

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}




@section Styles {

    <link href="~/Static/css/Tienda.css" rel="stylesheet" />
}





<div class="shop-header">
    <div>
        <h2 class="shop-title">Tienda</h2>
        <p class="shop-subtitle">Productos disponibles para tu mascota 🐾</p>
    </div>

    <div class="shop-filters">
        <form method="get" action="@Url.Action("VerTienda","Tienda")" class="d-flex gap-2 flex-wrap">
            @Html.DropDownList(
                "idCategoria",
                ViewBag.Categorias as SelectList,
                "Todas las categorías",
                new { @class = "form-select", style = "min-width: 200px;" }
            )

            <input type="text" name="q" class="form-control" placeholder="Buscar..." style="min-width: 220px;" />
            <button class="btn btn-primary" type="submit">Buscar</button>
            <a class="btn btn-outline-secondary" href="@Url.Action("VerTienda","Tienda")">Limpiar</a>
        </form>

        <a class="btn btn-success" style="border-radius:999px;" href="@Url.Action("VerCarrito","Carrito")">
            Ver carrito
        </a>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="empty-state">
        <h5 style="margin-bottom: 6px;">No hay productos disponibles</h5>
        <p style="margin:0; opacity:.75;">Probá con otra búsqueda o volvé más tarde.</p>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var p in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="product-card">
                    <div class="product-img-wrap">
                        @* Imagen del producto *@
                        <img class="product-img" src="@(!string.IsNullOrWhiteSpace(p.Imagen) ? p.Imagen : "/imgCatalogos/no-image.png")" alt="@p.Nombre" />

                        <span class="badge-stock">Stock: @p.Stock</span>
                        @* Si querés, aquí podrías mostrar categoría si la agregás al modelo para tienda *@
                        <span class="badge-category">₡@String.Format("{0:0.00}", p.Precio)</span>
                    </div>

                    <div class="product-body">
                        <div class="product-name">@p.Nombre</div>
                        <div class="product-desc">@p.Descripcion</div>

                        <div class="product-footer">
                            <div class="price">₡@String.Format("{0:0.00}", p.Precio)</div>

                            @* Botón Agregar al carrito *@
                            @using (Html.BeginForm("AgregarAlCarrito", "Carrito", FormMethod.Post, new { style = "display:inline;", @id = "FormAgregarCarrito" }))
                            {
                                @Html.Hidden("id", p.IdProducto)

                                <button type="submit" class="btn btn-success btn-add">
                                    <span class="material-symbols-rounded" style="font-size:20px; line-height:0;">
                                        add_shopping_cart
                                    </span>
                                    Agregar
                                </button>
                            }
                        </div>

                        @* Link opcional a detalle *@
                        <div class="mt-2">
                            <a href="@Url.Action("Detalle","Tienda", new { id = p.IdProducto })" class="text-decoration-none" style="font-weight:600;">
                                Ver detalle →
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
