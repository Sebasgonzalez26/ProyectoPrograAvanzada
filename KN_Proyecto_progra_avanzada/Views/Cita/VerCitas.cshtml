@model List<KN_Proyecto_progra_avanzada.Models.Cita>

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<div class="container-fluid py-4">

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h3 class="text-dark fw-bold mb-1">Agenda de citas</h3>
            <p class="text-muted mb-0">
                Revisa y administra las citas programadas para tus pacientes.
            </p>
        </div>

        <a href="@Url.Action("AgregarCita", "Cita")" class="btn btn-success shadow-sm">
            <i class="material-symbols-rounded align-middle me-1">event_available</i>
            Registrar nueva cita
        </a>
    </div>

    <!-- Barra de filtros arriba -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body py-3">
            <div class="row align-items-end g-3">
                <div class="col-md-3">
                    <label class="form-label mb-1 text-muted text-uppercase" style="font-size: 0.75rem;">
                        Estado
                    </label>
                    <select class="form-select form-select-sm">
                        <option>Todos</option>
                        <option>Programada</option>
                        <option>Completada</option>
                        <option>Cancelada</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label mb-1 text-muted text-uppercase" style="font-size: 0.75rem;">
                        Buscar por mascota
                    </label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text">
                            <i class="material-symbols-rounded" style="font-size:18px;">search</i>
                        </span>
                        <input type="text"
                               class="form-control"
                               placeholder="Nombre de la mascota" />
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label mb-1 text-muted text-uppercase" style="font-size: 0.75rem;">
                        Rango de fecha (opcional)
                    </label>
                    <input type="date" class="form-control form-control-sm" />
                </div>

                <div class="col-md-2 text-md-end">
                    <small class="text-muted d-block" style="font-size: 0.75rem;">
                        (Filtros decorativos, se pueden conectar con JS después)
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Listado de citas en tarjetas -->
    @if (Model != null && Model.Any())
    {
        <div class="row g-3">
            @foreach (var cita in Model)
            {
                var badgeClass = "bg-gradient-secondary";
                if (cita.Estado == "Programada") { badgeClass = "bg-gradient-info"; }
                else if (cita.Estado == "Completada") { badgeClass = "bg-gradient-success"; }
                else if (cita.Estado == "Cancelada") { badgeClass = "bg-gradient-danger"; }

                <div class="col-md-6 col-xl-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body d-flex flex-column">

                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <span class="badge @badgeClass mb-1">@cita.Estado</span>
                                    <h5 class="fw-bold mb-0">@cita.NombreMascota</h5>
                                    <small class="text-muted">@cita.NombreCliente</small>
                                </div>

                                <div class="text-end">
                                    <i class="material-symbols-rounded text-secondary" style="font-size: 30px;">pets</i>
                                </div>
                            </div>

                            <!-- Información principal -->
                            <div class="mb-2">
                                <div class="d-flex align-items-center mb-1">
                                    <i class="material-symbols-rounded me-2" style="font-size:18px;">calendar_month</i>
                                    <span>@cita.FechaCita.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>

                                <div class="d-flex align-items-center mb-1">
                                    <i class="material-symbols-rounded me-2" style="font-size:18px;">stethoscope</i>
                                    <span>Dr(a). @cita.NombreVeterinario</span>
                                </div>

                                <div class="d-flex align-items-start">
                                    <i class="material-symbols-rounded me-2 mt-1" style="font-size:18px;">description</i>
                                    <span>@cita.Motivo</span>
                                </div>
                            </div>

                            <!-- Acciones -->
                            <div class="mt-auto d-flex justify-content-between">
                                <a href="@Url.Action("ActualizarCita", "Cita", new { q = cita.IdCita })"
                                   class="btn btn-primary btn-sm">
                                    <i class="material-symbols-rounded align-middle" style="font-size:18px;">edit</i>
                                </a>

                                <a href="@Url.Action("CambiarEstadoCita", "Cita", new { q = cita.IdCita })"
                                   class="btn btn-outline-danger btn-sm">
                                    <i class="material-symbols-rounded align-middle" style="font-size:18px;">cancel</i>
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }

        </div>
    }
    else
    {
        <div class="text-center text-muted py-5">
            <i class="material-symbols-rounded mb-2" style="font-size:48px;">event_busy</i>
            <p class="mb-1">Aún no hay citas registradas.</p>
            <p class="mb-3">Comienza creando una nueva cita para alguna mascota.</p>
            <a href="@Url.Action("AgregarCita", "Cita")" class="btn btn-success">
                <i class="material-symbols-rounded align-middle me-1">event_available</i>
                Registrar primera cita
            </a>
        </div>
    }

</div>
