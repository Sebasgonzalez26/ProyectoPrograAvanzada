@model KN_Proyecto_progra_avanzada.Models.Cita

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<!-- ⭐ ESTILOS ARREGLADOS (para que NO se vea texto flotando) -->
<style>
    .cita-form .form-label {
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: #444;
    }

    .cita-form .form-control,
    .cita-form .form-select,
    .cita-form textarea {
        border: 1px solid #d0d0d0 !important;
        border-radius: 0.5rem;
        padding: 0.5rem 0.75rem;
        background-color: #f8fafc; /* 🔹 Recuadro visible */
        box-shadow: none !important;
        min-height: 42px;
    }

        .cita-form textarea.form-control {
            min-height: 90px;
            resize: vertical;
        }

        .cita-form .form-control:focus,
        .cita-form .form-select:focus,
        .cita-form textarea:focus {
            border-color: #4caf50;
            background-color: #ffffff;
            box-shadow: 0 0 0 0.15rem rgba(76, 175, 80, .25);
            outline: none;
        }

    .cita-form small.form-text {
        font-size: 0.8rem;
        color: #6c757d;
    }
</style>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-sm border-0">
                <div class="card-header pb-0 bg-transparent">
                    <h4 class="font-weight-bolder mb-1">Actualizar cita</h4>
                    <p class="text-sm text-muted mb-0">
                        Modifica la información de la cita seleccionada.
                    </p>
                </div>

                <div class="card-body pt-3 cita-form">
                    @using (Html.BeginForm("ActualizarCita", "Cita", FormMethod.Post, new { @id = "FormActualizarCita" }))
                    {
                        @Html.HiddenFor(x => x.IdCita)

                        <!-- Mascota -->
                        <div class="mb-3">
                            <label class="form-label">Mascota</label>
                            @Html.DropDownListFor(
                                x => x.IdMascota,
                                (IEnumerable<SelectListItem>)ViewBag.Mascotas,
                                "--Seleccione una mascota--",
                                new { @class = "form-select" }
                            )
                        </div>

                        <!-- Veterinario -->
                        <div class="mb-3">
                            <label class="form-label">Veterinario</label>
                            @Html.DropDownListFor(
                                x => x.IdVeterinario,
                                (IEnumerable<SelectListItem>)ViewBag.Veterinarios,
                                "--Seleccione un veterinario--",
                                new { @class = "form-select" }
                            )
                        </div>

                        <!-- Fecha -->
                        <div class="mb-3">
                            <label class="form-label">Fecha y hora</label>
                            @Html.TextBoxFor(
                                x => x.FechaCita,
                                "{0:yyyy-MM-ddTHH:mm}",
                                new { @class = "form-control", type = "datetime-local" }
                            )
                        </div>

                        <!-- Motivo -->
                        <div class="mb-3">
                            <label class="form-label">Motivo</label>
                            @Html.TextBoxFor(
                                x => x.Motivo,
                                new { @class = "form-control" }
                            )
                        </div>

                        <!-- Observaciones -->
                        <div class="mb-3">
                            <label class="form-label">Observaciones</label>
                            @Html.TextAreaFor(
                                x => x.Observaciones,
                                new { @class = "form-control", rows = "3" }
                            )
                        </div>

                        <!-- Estado -->
                        <div class="mb-4">
                            <label class="form-label">Estado</label>
                            @Html.DropDownListFor(
                                x => x.Estado,
                                new List<SelectListItem>
                                {
                                    new SelectListItem { Text = "Programada", Value = "Programada" },
                                    new SelectListItem { Text = "Completada", Value = "Completada" },
                                    new SelectListItem { Text = "Cancelada",  Value = "Cancelada"  }
                                },
                                "--Seleccione estado--",
                                new { @class = "form-select" }
                            )
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("VerCitas", "Cita")"
                               class="btn btn-outline-secondary">
                                Volver
                            </a>

                            <button type="submit" class="btn bg-gradient-success">
                                Guardar cambios
                            </button>
                        </div>
                    }
                </div>

            </div>

        </div>
    </div>
</div>
