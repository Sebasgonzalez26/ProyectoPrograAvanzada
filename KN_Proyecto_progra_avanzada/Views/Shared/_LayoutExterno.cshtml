<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- ICONOS -->
    <link rel="apple-touch-icon" sizes="76x76" href="~/Static/img/apple-icon.png" />
    <link rel="icon" type="image/png" href="~/Static/img/favicon.png" />

    <title>Proyecto Programación Avanzada</title>

    <!-- Fuentes -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />

    <!-- Nucleo / iconos del template -->
    <link href="~/Static/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/Static/css/nucleo-svg.css" rel="stylesheet" />

    <!-- Font Awesome (usa este si el otro te da 403) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js" crossorigin="anonymous"></script>

    <!-- CSS principal del dashboard -->
    <link href="~/Static/css/material-dashboard.css" rel="stylesheet" />
</head>
<body class="bg-gray-200">
    <div class="container position-sticky z-index-sticky top-0">
        <div class="row">
            <div class="col-12">
                @* navbar externa si la necesitas *@
            </div>
        </div>
    </div>

    <main class="main-content mt-0">
        @RenderBody()
    </main>

    <!-- ========== SCRIPTS NECESARIOS ========== -->
    <!-- Core JS (estos vienen en el template de Creative Tim) -->
    <script src="~/Static/js/popper.min.js"></script>
    <script src="~/Static/js/bootstrap.min.js"></script>

    <!-- Perfect Scrollbar (esto es lo que te falta) -->
    <script src="~/Static/js/perfect-scrollbar.min.js"></script>
    <script src="~/Static/js/smooth-scrollbar.min.js"></script>

    <!-- Script principal del dashboard -->
    <script src="~/Static/js/material-dashboard.min.js"></script>
    

    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = { damping: '0.5' };
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>

    <script async defer src="https://buttons.github.io/buttons.js"></script>

    <!-- Botones de GitHub (opcional) -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>
