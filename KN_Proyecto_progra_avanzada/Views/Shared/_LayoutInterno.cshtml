@{
    var nombreUsuario = (Session["NombreUsuario"] == null ? "Invitado" : Session["NombreUsuario"].ToString());
    var idPerfil = (Session["IdPerfil"] == null ? "0" : Session["IdPerfil"].ToString());
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="~/Static/icons/apple-icon.png" />
    <link rel="icon" type="image/png" href="~/Static/icons/favicon.png" />

    <title>Proyecto progra avanzada</title>

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />

    <!-- 🔹 Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2Lw=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <link href="~/Static/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/Static/css/nucleo-svg.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link href="~/Static/css/material-dashboard.css" rel="stylesheet" />
    <link href="~/Static/css/nucleo-svg.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/2.3.5/css/dataTables.bootstrap5.css" rel="stylesheet" />

    <style>
        .account-icon {
            font-size: 40px !important;
            line-height: 1;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .account-link {
            padding-right: 1.5rem;
            display: flex;
            align-items: center;
        }

        .navbar .nav-link {
            font-size: 16px;
            font-weight: 500;
            color: #1f2937;
        }

            .navbar .nav-link:hover {
                color: #0f766e;
                transition: color 0.2s ease-in-out;
            }

        .navbar .material-symbols-rounded {
            font-size: 24px;
            vertical-align: middle;
        }

        .navbar-nav .nav-item {
            display: flex;
            align-items: center;
        }

        .main-wrapper {
            min-height: calc(100vh - 90px);
            display: flex;
            flex-direction: column;
        }

        .content-body {
            flex-grow: 1;
        }

        footer.footer {
            margin-top: 40px;
        }

        .dropdown-menu {
            min-width: 180px;
            border-radius: .75rem;
            font-size: 15px;
            box-shadow: 0 4px 14px rgba(0, 0, 0, 0.1);
        }

            .dropdown-menu a.dropdown-item:hover {
                background-color: #f1f5f9;
            }

        /* Quitar el caret del dropdown */
        .navbar .dropdown-toggle::after {
            display: none !important;
        }
    </style>

    @RenderSection("estilos", required: false)
</head>

<body class="g-sidenav-show bg-gray-100">
    <!-- BARRA LATERAL -->
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-radius-lg fixed-start ms-2 bg-white my-2"
           id="sidenav-main">
        <div class="sidenav-header">
            <a class="navbar-brand px-4 py-3 m-0" href="@Url.Action("Principal", "Home")">
                <span class="text-gradient" style="font-weight:700;
                    background:linear-gradient(90deg,#0f766e,#2dd4bf);
                    -webkit-background-clip:text;-webkit-text-fill-color:transparent;">
                    Mundo Animal Vet
                </span>
            </a>
        </div>

        <hr class="horizontal dark mt-0 mb-2">

        <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
            <ul class="navbar-nav">
                @if (idPerfil == "1")
                {
                    <li class="nav-item mt-3">
                        <h6 class="ps-4 ms-2 text-uppercase text-xs text-dark font-weight-bolder opacity-5">
                            Gestiones
                        </h6>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("VerMascotas", "Mascota")">
                            <i class="material-symbols-rounded align-middle">pets</i>
                            <span class="nav-link-text ms-1">Gestión de Mascotas</span>
                        </a>
                    </li>


                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("VerClientes","Cliente")">
                            <i class="material-symbols-rounded opacity-5">group</i>
                            <span class="nav-link-text ms-1">Gestión de Clientes</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("VerVeterinarios", "Veterinario")">
                            <i class="material-symbols-rounded opacity-5">stethoscope</i>
                            <span class="nav-link-text ms-1">Gestión de Veterinarios</span>
                        </a>
                    </li>
                }

                <li class="nav-item mt-3">
                    <h6 class="ps-4 ms-2 text-uppercase text-xs text-dark font-weight-bolder opacity-5">
                        Calendario y control de citas
                    </h6>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark" href="#">
                        <i class="material-symbols-rounded opacity-5">calendar_month</i>
                        <span class="nav-link-text ms-1">Registrar cita</span>
                    </a>
                </li>

                <li class="nav-item mt-3">
                    <h6 class="ps-4 ms-2 text-uppercase text-xs text-dark font-weight-bolder opacity-5">
                        Inventario
                    </h6>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark" href="@Url.Action("VerInventario", "Inventario")">
                        <i class="material-symbols-rounded opacity-5">inventory_2</i>
                        <span class="nav-link-text ms-1">Gestión de productos</span>
                    </a>
                </li>

                <li class="nav-item mt-3">
                    <h6 class="ps-4 ms-2 text-uppercase text-xs text-dark font-weight-bolder opacity-5">
                        Tienda en línea
                    </h6>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark" href="@Url.Action("VerCatalogo", "Catalogo")">
                        <i class="material-symbols-rounded opacity-5">shopping_bag</i>
                        <span class="nav-link-text ms-1">Catálogo</span>
                    </a>
                </li>
            </ul>
        </div>
    </aside>

    <!-- CONTENIDO PRINCIPAL -->
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <!-- NAVBAR SUPERIOR -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-3 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    </ol>
                </nav>

                <ul class="navbar-nav ms-auto d-flex align-items-center">
                    <li class="nav-item dropdown pe-2 d-flex align-items-center">
                        <a href="#"
                           class="nav-link account-link dropdown-toggle d-flex align-items-center"
                           id="userDropdown"
                           role="button"
                           aria-expanded="false"
                           style="gap:8px;">
                            <span class="material-symbols-rounded account-icon">
                                account_circle
                            </span>
                            <span class="fw-bold" style="font-size:16px;">
                                @nombreUsuario
                            </span>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end px-2" id="userDropdownMenu">
                            <li>
                                <span class="dropdown-item-text fw-bold">
                                    @nombreUsuario
                                </span>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("VerPerfil","Usuario")">
                                    <i class="material-symbols-rounded me-2">person</i> Perfil
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("CambiarAcceso","Usuario")">
                                    <i class="material-symbols-rounded me-2">shield_lock</i> Seguridad
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("CerrarSesion","Home")">
                                    <i class="material-symbols-rounded me-2">logout</i> Cerrar sesión
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>

            </div>
        </nav>

        <div class="content-body px-3 py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="footer py-3 mt-auto">
        <div class="container-fluid">
            <div class="row align-items-center justify-content-between">
                <div class="col-lg-6 mb-lg-0 mb-4">
                    <div class="text-muted text-center text-sm text-lg-start">
                        ©
                        <script>document.write(new Date().getFullYear())</script>, Proyecto Programación Avanzada – Mundo Animal Vet
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/Static/js/popper.min.js"></script>
    <script src="~/Static/js/bootstrap.min.js"></script>
    <script src="~/Static/js/perfect-scrollbar.min.js"></script>
    <script src="~/Static/js/smooth-scrollbar.min.js"></script>
    <script src="~/Static/js/material-dashboard.min.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/2.3.5/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.3.5/js/dataTables.bootstrap5.js"></script>

    <!-- jQuery Validate -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>

    @RenderSection("scripts", required: false)

    <!-- Script para el dropdown del usuario -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var trigger = document.getElementById('userDropdown');
            var menu = document.getElementById('userDropdownMenu');

            if (!trigger || !menu) return;

            trigger.addEventListener('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                menu.classList.toggle('show');
            });

            document.addEventListener('click', function (e) {
                if (!menu.classList.contains('show')) return;
                if (!trigger.contains(e.target) && !menu.contains(e.target)) {
                    menu.classList.remove('show');
                }
            });
        });
    </script>
</body>
</html>
