@model KN_Proyecto_progra_avanzada.Models.Inventario

@{
    ViewBag.Title = "Actualizar Inventario";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}



@section Styles {
    <link href="~/Static/css/Inventario.css" rel="stylesheet" />
}




<div class="container-fluid py-4">

    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-sm border-0">
                <div class="card-header pb-0 bg-transparent">
                    <h4 class="font-weight-bolder mb-1">Actualizar Inventario</h4>
                    <p class="text-sm text-muted mb-0">
                        Modifica la información del ítem seleccionado.
                    </p>
                </div>

                <div class="card-body pt-3 inventario-form">

                    @using (Html.BeginForm("ActualizarInventario", "Inventario", FormMethod.Post, new { enctype = "multipart/form-data", @id = "FormActualizarInventario" }))
                    {
                        @Html.HiddenFor(x => x.IdInventario)

                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "text-danger" })
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label class="form-label">Descripción</label>
                            @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control", rows = "3" })
                            @Html.ValidationMessageFor(x => x.Descripcion, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">

                            <!-- Categoría -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Categoría</label>
                                @Html.TextBoxFor(x => x.Categoria, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Categoria, "", new { @class = "text-danger" })
                            </div>

                            <!-- Unidad -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Unidad</label>
                                @Html.TextBoxFor(x => x.Unidad, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Unidad, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <div class="row">

                            <!-- Stock -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Stock</label>
                                @Html.TextBoxFor(x => x.Stock, new { @class = "form-control", type = "number", min = "0" })
                                @Html.ValidationMessageFor(x => x.Stock, "", new { @class = "text-danger" })
                            </div>

                            <!-- Precio -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Precio Venta</label>
                                @Html.TextBoxFor(x => x.PrecioVenta, new { @class = "form-control", type = "number", step = "0.01" })
                                @Html.ValidationMessageFor(x => x.PrecioVenta, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <!-- Imagen actual -->
                        <div class="mb-3">
                            <label class="form-label">Imagen actual</label><br />

                            @if (!string.IsNullOrEmpty(Model.Imagen))
                            {
                                <img src="@Model.Imagen" class="preview-img mb-2" />
                            }
                            else
                            {
                                <p class="text-muted">No hay imagen registrada.</p>
                            }
                        </div>

                        <!-- Nueva imagen -->
                        <div class="mb-4">
                            <label class="form-label">Nueva imagen (opcional)</label>
                            <input type="file" name="ImgInventario" id="ImgInventario" class="form-control" />
                            <small class="text-muted">Formatos permitidos: .jpg, .jpeg, .png — Máx. 2MB</small>
                        </div>

                        <!-- Botón -->
                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-success w-100 mb-0">
                                Guardar cambios
                            </button>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>

</div>

@section scripts {
    <script src="~/Static/js/ActualizarInventario.js"></script>
}
