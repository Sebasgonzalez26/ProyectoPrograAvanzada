@model KN_Proyecto_progra_avanzada.Models.Inventario

@{
    ViewBag.Title = "Agregar Inventario";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

@section Styles {
    <link href="~/Static/css/Inventario.css" rel="stylesheet" />
}



<div class="container-fluid py-4">

    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-sm border-0">
                <div class="card-header pb-0 bg-transparent">
                    <h4 class="font-weight-bolder mb-1">Agregar inventario</h4>
                    <p class="text-sm text-muted mb-0">
                        Registra un nuevo producto, herramienta o insumo para la veterinaria.
                    </p>
                </div>

                <div class="card-body pt-3 inventario-form">

                    @using (Html.BeginForm("AgregarInventario", "Inventario", FormMethod.Post, new { @id = "FormAgregarInventario", @enctype = "multipart/form-data" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "text-danger" })
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label class="form-label">Descripción</label>
                            @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control", rows = "3" })
                            @Html.ValidationMessageFor(x => x.Descripcion, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <!-- Categoría -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Categoría</label>
                                @Html.TextBoxFor(x => x.Categoria, new { @class = "form-control", placeholder = "Vacuna, Medicina, Jeringas..." })
                                @Html.ValidationMessageFor(x => x.Categoria, "", new { @class = "text-danger" })
                            </div>

                            <!-- Unidad -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Unidad</label>
                                @Html.TextBoxFor(x => x.Unidad, new { @class = "form-control", placeholder = "Unidad, ml, mg, caja..." })
                                @Html.ValidationMessageFor(x => x.Unidad, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <!-- Stock -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Stock</label>
                                @Html.TextBoxFor(x => x.Stock, new { @class = "form-control", type = "number", min = "0" })
                                @Html.ValidationMessageFor(x => x.Stock, "", new { @class = "text-danger" })
                            </div>

                            <!-- Precio Venta -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Precio Venta</label>
                                @Html.TextBoxFor(x => x.PrecioVenta, new { @class = "form-control", type = "number", step = "0.01", min = "0" })
                                @Html.ValidationMessageFor(x => x.PrecioVenta, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Imagen -->
                        <div class="mb-3">
                            <label class="form-label">Imagen</label>
                            <input type="file" class="form-control" id="ImgInventario" name="ImgInventario" />
                            <small class="form-text text-muted">Formatos permitidos: .jpg, .png — Máx: 2MB</small>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-success w-100 mb-0">
                                Guardar inventario
                            </button>
                        </div>

                    }
                </div>
            </div>

        </div>
    </div>

</div>

@section scripts {
    <script src="~/Static/js/AgregarInventario.js"></script>
}
