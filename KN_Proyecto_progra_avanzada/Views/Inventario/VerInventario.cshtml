@model List<KN_Proyecto_progra_avanzada.Models.Inventario>

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark fw-bold">Gestión de Inventario</h3>

        <a href="@Url.Action("AgregarInventario", "Inventario")" class="btn btn-success shadow-sm">
            <i class="material-symbols-rounded align-middle">inventory_2</i> Agregar producto
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table id="tInventario" class="table align-middle mb-0 table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Imagen</th>
                            <th>Nombre</th>
                            <th>Categoría</th>
                            <th>Stock</th>
                            <th>Unidad</th>
                            <th>Precio Venta</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>

                                    <!-- Imagen -->
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Imagen))
                                        {
                                            <img src="@item.Imagen"
                                                 alt="@item.Nombre"
                                                 class="rounded"
                                                 width="55"
                                                 height="55"
                                                 style="object-fit:cover;" />
                                        }
                                        else
                                        {
                                            <div class="bg-secondary text-white d-flex justify-content-center align-items-center rounded"
                                                 style="width:55px;height:55px;">
                                                <i class="material-symbols-rounded">inventory_2</i>
                                            </div>
                                        }
                                    </td>

                                    <td class="fw-semibold">@item.Nombre</td>
                                    <td>@item.Categoria</td>
                                    <td>@item.Stock</td>
                                    <td>@item.Unidad</td>
                                    <td>
                                        @if (item.PrecioVenta.HasValue)
                                        {
                                            <span class="badge bg-gradient-info">₡@item.PrecioVenta</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>

                                    <td>
                                        @if (item.Estado)
                                        {
                                            <span class="badge bg-gradient-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-gradient-secondary">Inactivo</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <a href="@Url.Action("ActualizarInventario", "Inventario", new { q = item.IdInventario })"
                                           class="btn btn-sm btn-primary shadow-sm me-2">
                                            <i class="material-symbols-rounded align-middle">edit</i>
                                        </a>

                                        <div class="form-check form-switch d-inline-block">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   @(item.Estado ? "checked" : "")
                                                   onclick="location.href='@Url.Action("CambiarEstadoInventario", "Inventario", new { q = item.IdInventario })'">
                                        </div>
                                    </td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="material-symbols-rounded mb-2" style="font-size:40px;">inventory_2</i><br />
                                    No hay productos registrados actualmente en inventario.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section scripts {
}
