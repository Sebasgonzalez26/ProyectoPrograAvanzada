@model KN_Proyecto_progra_avanzada.Models.Mascota

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

@section Styles {
    <link href="~/Static/css/Mascota.css" rel="stylesheet" />
}


<div class="container-fluid py-4">

    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-sm border-0">
                <div class="card-header pb-0 bg-transparent">
                    <h4 class="font-weight-bolder mb-1">Agregar mascota</h4>
                    <p class="text-sm text-muted mb-0">
                        Registra una nueva mascota y asígnala a un cliente.
                    </p>
                </div>

                <div class="card-body pt-3 mascota-form">
                    @using (Html.BeginForm("AgregarMascota", "Mascota", FormMethod.Post, new { @id = "FormAgregarMascota" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label for="Nombre" class="form-label">Nombre de la mascota</label>
                            @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <!-- Especie -->
                            <div class="col-md-6 mb-3">
                                <label for="Especie" class="form-label">Especie</label>
                                @Html.TextBoxFor(
                                    x => x.Especie,
                                    new { @class = "form-control", placeholder = "Perro, Gato, Ave..." }
                                )
                                @Html.ValidationMessageFor(x => x.Especie, "", new { @class = "text-danger" })
                            </div>

                            <!-- Raza -->
                            <div class="col-md-6 mb-3">
                                <label for="Raza" class="form-label">Raza</label>
                                @Html.TextBoxFor(
                                    x => x.Raza,
                                    new { @class = "form-control" }
                                )
                                @Html.ValidationMessageFor(x => x.Raza, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <!-- Sexo -->
                            <div class="col-md-6 mb-3">
                                <label for="Sexo" class="form-label">Sexo</label>
                                @Html.TextBoxFor(
                                    x => x.Sexo,
                                    new { @class = "form-control", placeholder = "Macho / Hembra" }
                                )
                                @Html.ValidationMessageFor(x => x.Sexo, "", new { @class = "text-danger" })
                            </div>

                            <!-- Fecha de nacimiento -->
                            <div class="col-md-6 mb-3">
                                <label for="FechaNacimiento" class="form-label">Fecha de nacimiento</label>
                                @Html.TextBoxFor(
                                    x => x.FechaNacimiento,
                                    new { @class = "form-control", type = "date" }
                                )
                                @Html.ValidationMessageFor(x => x.FechaNacimiento, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Cliente -->
                        <div class="mb-4">
                            <label for="IdCliente" class="form-label">Cliente (dueño)</label>
                            @Html.DropDownListFor(
                                x => x.IdCliente,
                                (IEnumerable<SelectListItem>)ViewBag.Clientes,
                                "--Seleccione un cliente--",
                                new { @class = "form-select" }
                            )
                            @Html.ValidationMessageFor(x => x.IdCliente, "", new { @class = "text-danger" })
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-success w-100 mb-0">
                                Guardar mascota
                            </button>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>

</div>

@section scripts {
    <script src="~/Static/js/AgregarMascota.js"></script>
}
