@model KN_Proyecto_progra_avanzada.Models.Cliente

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

@section Styles {
    <link href="~/Static/css/Cliente.css" rel="stylesheet" />
}

<div class="container-fluid py-4">

    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-sm border-0">
                <div class="card-header pb-0 bg-transparent">
                    <h4 class="font-weight-bolder mb-1">Actualizar cliente</h4>
                    <p class="text-sm text-muted mb-0">
                        Modifica la información del cliente seleccionado.
                    </p>
                </div>

                <div class="card-body pt-3 cliente-form">
                    @using (Html.BeginForm("ActualizarCliente", "Cliente", FormMethod.Post, new { @id = "FormActualizarCliente" }))
                    {
                        @Html.HiddenFor(x => x.IdCliente)

                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <div class="row">
                            <!-- Nombre -->
                            <div class="col-md-6 mb-3">
                                <label for="Nombre" class="form-label">Nombre</label>
                                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "text-danger" })
                            </div>

                            <!-- Apellidos -->
                            <div class="col-md-6 mb-3">
                                <label for="Apellidos" class="form-label">Apellidos</label>
                                @Html.TextBoxFor(x => x.Apellidos, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Apellidos, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Correo -->
                        <div class="mb-3">
                            <label for="Correo" class="form-label">Correo electrónico</label>
                            @Html.TextBoxFor(
                                x => x.Correo,
                                new { @class = "form-control", type = "email" }
                            )
                            @Html.ValidationMessageFor(x => x.Correo, "", new { @class = "text-danger" })
                        </div>

                        <!-- Teléfono -->
                        <div class="mb-3">
                            <label for="Telefono" class="form-label">Teléfono</label>
                            @Html.TextBoxFor(
                                x => x.Telefono,
                                new { @class = "form-control" }
                            )
                            @Html.ValidationMessageFor(x => x.Telefono, "", new { @class = "text-danger" })
                        </div>




                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-success w-100 mb-0">
                                Guardar cambios
                            </button>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>

</div>

@section scripts {
    <script src="~/Static/js/ActualizarCliente.js"></script>
}
