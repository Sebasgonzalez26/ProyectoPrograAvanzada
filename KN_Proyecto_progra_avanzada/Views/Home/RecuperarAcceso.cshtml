@model KN_Proyecto_progra_avanzada.Models.Usuario


@{
        Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="page-header align-items-start min-vh-100"
     style="background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');">

    <span class="mask bg-gradient-dark opacity-6"></span>

    <div class="container my-auto">
        <div class="row">
            <div class="col-lg-4 col-md-8 col-12 mx-auto">
                <div class="card z-index-0 fadeIn3 fadeInBottom">

                    <!-- Encabezado -->
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-dark shadow-dark border-radius-lg py-3 pe-1">
                            <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Recuperar Contraseña</h4>
                        </div>
                    </div>

                    <!-- Cuerpo -->
                    <div class="card-body">




                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-light" role="alert">
                                @ViewBag.Mensaje
                            </div>
                        }




                        @using (Html.BeginForm("RecuperarAcceso", "Home"))
                        {

                            <p class="text-sm text-secondary mb-4 text-center">
                                Ingresa tu correo electrónico para recibir un enlace de recuperación.
                            </p>

                            <div class="input-group input-group-outline my-3">
                                <label class="form-label">Correo electrónico</label>
                                @Html.TextBoxFor(model => model.CorreoElectronico, new { @class = "form-control" })

                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">
                                    Enviar enlace
                                </button>
                            </div>

                        }


                        <p class="mt-3 text-sm text-center">
                            ¿Recordaste tu contraseña?
                            <a href="@Url.Action("Index", "Home")" class="text-primary text-gradient font-weight-bold">Iniciar sesión</a>
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer position-absolute bottom-2 py-2 w-100">
        <div class="container">
            <div class="row align-items-center justify-content-lg-between">
                <div class="col-12 col-md-6 my-auto">
                    <div class="copyright text-center text-sm text-white text-lg-start">
                        © Mundo Animal Vet
                        <script>document.write(new Date().getFullYear())</script>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>
