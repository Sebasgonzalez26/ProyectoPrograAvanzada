@model KN_Proyecto_progra_avanzada.Models.Usuario

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<style>
    /* para que los mensajes queden debajo del input */
    .validation-msg {
        display: block;
        margin-top: 4px;
        font-size: 0.78rem;
        color: #ffe5e5; /* texto claro porque el fondo es oscuro */
        font-weight: 500;
    }

    /* cuando hay error en el input-group */
    .input-group.has-error .form-control {
        border-color: #ff7676 !important;
        box-shadow: 0 0 0 1px rgba(255, 165, 165, 0.12);
    }

    /* por si el template deja muy pegado el input al mensaje */
    .input-group.input-group-outline {
        margin-bottom: 1rem;
    }
</style>

<div class="page-header align-items-start min-vh-100"
     style="background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80');">
    <span class="mask bg-gradient-dark opacity-6"></span>
    <div class="container my-auto">
        <div class="row">
            <div class="col-lg-4 col-md-8 col-12 mx-auto">
                <div class="card z-index-0 fadeIn3 fadeInBottom">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-dark shadow-dark border-radius-lg py-3 pe-1">
                            <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Iniciar Sesión</h4>
                            <div class="row mt-3">
                                <div class="col-2 text-center ms-auto">
                                    <a class="btn btn-link px-3" href="javascript:;">
                                        <i class="fa fa-facebook text-white text-lg"></i>
                                    </a>
                                </div>
                                <div class="col-2 text-center px-1">
                                    <a class="btn btn-link px-3" href="javascript:;">
                                        <i class="fa fa-github text-white text-lg"></i>
                                    </a>
                                </div>
                                <div class="col-2 text-center me-auto">
                                    <a class="btn btn-link px-3" href="javascript:;">
                                        <i class="fa fa-google text-white text-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        @* Mensaje que te mande el controlador, por ejemplo "credenciales inválidas" *@
                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-danger text-sm py-2" role="alert">
                                @ViewBag.Mensaje
                            </div>
                        }

                        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @id = "FormIniciarSesion" }))
                        {
                            <div class="input-group input-group-outline my-3">
                                <label class="form-label">Email</label>
                                @Html.TextBoxFor(model => model.CorreoElectronico, new { @class = "form-control", @id = "CorreoElectronico" })
                            </div>

                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Password</label>
                                @Html.PasswordFor(model => model.Contrasena, new { @class = "form-control", @type = "password", @id = "Contrasena" })
                            </div>

                            <div class="text-lg-end mb-2">
                                <a href="@Url.Action("RecuperarAcceso", "Home")"
                                   class="text-secondary"
                                   style="font-size: 0.85rem; text-decoration: none;">
                                    ¿Olvidaste tu contraseña?
                                </a>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-dark w-100 my-2 mb-2">Iniciar Sesión</button>
                            </div>
                        }

                        <p class="mt-2 text-sm text-center">
                            ¿No tienes cuenta?
                            <a href="@Url.Action("Registro", "Home")" class="text-primary text-gradient font-weight-bold">Registrarse</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer position-absolute bottom-2 py-2 w-100">
        <div class="container">
            <div class="row align-items-center justify-content-lg-between">
                <div class="col-12 col-md-6 my-auto">
                    <div class="copyright text-center text-sm text-white text-lg-start">
                        © Mundo Animal Vet
                        <script>document.write(new Date().getFullYear())</script>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>

<!-- tu JS externo -->
<script src="~/Static/js/Iniciar.js"></script>
