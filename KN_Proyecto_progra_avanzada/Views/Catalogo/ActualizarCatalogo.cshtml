@model KN_Proyecto_progra_avanzada.Models.Catalogo

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

@section Styles {
    <link href="~/Static/css/catalogo.css" rel="stylesheet" />

}


<div class="container-fluid py-4">

    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-sm border-0">
                <div class="card-header pb-0 bg-transparent">
                    <h4 class="font-weight-bolder mb-1">Actualizar Producto</h4>
                    <p class="text-sm text-muted mb-0">
                        Registra un nuevo ítem en el catálogo.
                    </p>
                </div>

                <div class="card-body pt-3 catalogo-form">
                    @using (Html.BeginForm("ActualizarCatalogo", "Catalogo", FormMethod.Post, new { @id = "FormActualizarCatalogo", @enctype = "multipart/form-data" }))
                    {


                        @Html.HiddenFor(x => x.IdProducto)


                        <!-- Nombre -->
                        <div class="mb-3">
                            <label for="Nombre" class="form-label">Nombre</label>
                            @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label for="Descripcion" class="form-label">Descripción</label>
                            @Html.TextAreaFor(
                                x => x.Descripcion,
                                new { @class = "form-control", @rows = "4" }
                            )
                        </div>

                        <div class="row">
                            <!-- Precio -->
                            <div class="col-md-6 mb-3">
                                <label for="Precio" class="form-label">Precio</label>
                                @Html.TextBoxFor(
    x => x.Precio,
    new { @class = "form-control" }
)

                            </div>

                            <!-- Stock -->
                            <div class="col-md-6 mb-3">
                                <label for="Stock" class="form-label">Stock</label>
                                @Html.TextBoxFor(
                                    x => x.Stock,
                                    new { @class = "form-control", type = "number", min = "0" }
                                )
                            </div>
                        </div>

                        <!-- Imagen -->
                        <div class="mb-3">
                            <label for="ImgCatalogo" class="form-label">Imagen</label>
                            <input type="file" class="form-control" id="ImgCatalogo" name="ImgCatalogo" />
                            <small class="form-text text-muted">
                                Formatos recomendados: .jpg, .png
                            </small>
                        </div>

                        <!-- Categoría -->
                        <div class="mb-4">
                            <label for="IdCategoria" class="form-label">Categoría</label>
                            @Html.DropDownListFor(
                                x => x.IdCategoria,
                                (IEnumerable<SelectListItem>)ViewBag.Categorias,
                                "--Seleccione una categoría--",
                                new { @class = "form-select" }
                            )
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-success w-100 mb-0">
                                Guardar producto
                            </button>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>

</div>

@section scripts {
    <script src="~/Static/js/ActualizarCatalogo.js"></script>
}
