@model List<KN_Proyecto_progra_avanzada.EF.tbCatalogo>

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark fw-bold">Catálogo de productos</h3>
        <a href="@Url.Action("AgregarProducto", "Catalogo")" class="btn btn-success shadow-sm">
            <i class="material-symbols-rounded align-middle">add_circle</i> Agregar producto
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle mb-0 table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Imagen</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Stock</th>
                            <th>Categoría</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Imagen))
                                        {
                                            <img src="@item.Imagen" alt="@item.Nombre"
                                                 class="rounded" width="55" height="55"
                                                 style="object-fit:cover;" />
                                        }
                                        else
                                        {
                                            <div class="bg-secondary text-white d-flex justify-content-center align-items-center rounded"
                                                 style="width:55px;height:55px;">
                                                <i class="material-symbols-rounded">inventory_2</i>
                                            </div>
                                        }
                                    </td>
                                    <td class="fw-semibold">@item.Nombre</td>
                                    <td class="text-muted">@item.Descripcion</td>
                                    <td><span class="badge bg-gradient-success">₡@item.Precio</span></td>
                                    <td>@item.Stock</td>
                                    <td>@item.IdCategoria</td>
                                    <td>
                                        @if (item.Estado == true)
                                        {
                                            <span class="badge bg-gradient-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-gradient-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("EditarProducto", "Catalogo", new { id = item.IdProducto })"
                                           class="btn btn-sm btn-primary shadow-sm me-2">
                                            <i class="material-symbols-rounded align-middle">edit</i>
                                        </a>
                                        <a href="@Url.Action("EliminarProducto", "Catalogo", new { id = item.IdProducto })"
                                           class="btn btn-sm btn-danger shadow-sm"
                                           onclick="return confirm('¿Seguro que deseas eliminar este producto?');">
                                            <i class="material-symbols-rounded align-middle">delete</i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="material-symbols-rounded mb-2" style="font-size:40px;">inventory_2</i><br />
                                    No hay productos registrados en el catálogo.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
